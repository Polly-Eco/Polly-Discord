import 'reflect-metadata';
import { DataSource } from 'typeorm';

export const AppDataSource = new DataSource({
    type: 'postgres',
    host: 'localhost',
    port: 5432,
    username: 'postgres',
    password: 'postgres',
    database: 'local-dev',
    synchronize: false,
    logging: false,
    entities: [
       'src/db/entities/**/*.ts'
    ],
    migrations: [
       'src/db/migrations/**/*.ts'
    ],
    subscribers: [
       'src/db/subscriber/**/*.ts'
    ]
});
